<section class="header">
  <section class="header-top">
    <a href="/#" class="logo">
      <img class="header-icon" src="<%= BrewSocial.logo %>">
    </a>

    <section class="multisearch-form">
      <h2>Search BrewSocial for Recipes and Users:</h2>
      <form>
        <input type="text" id="search-recipes">
        <button id="search">Submit</button>
      </form>
    </section>
  </section>

  <section class="header-nav group">
    <% if (BrewSocial.currentUser.isSignedIn()) { %>
      <span>Signed in as: <%= BrewSocial.currentUser.escape("username") %></span>
      <a id="sign-out-link" class="right" href="#">Sign out</a>
    <% } else { %>
    <span>New user?</span>
    <a id="sign-up-link" href="#">Sign up here.</a>
    <a id="sign-in-link" href="#" class="right">Sign in</a>
    <a id="sign-in-as-guest-link" href="#" class="right">Sign in as guest</a>
    <% } %>
  </section>

</section>
